@model bool?
@{
    ViewData["Title"] = Serenity.LocalText.Get("Db.Northwind.Mail.EntityPlural");
}

<div id="GridDiv"></div>

<script type="text/javascript">
    jQuery(function () {
        new MobilityMatters.Northwind.MailGrid($('#GridDiv'), {
            isSent: @Model.ToJson()
        }).init();

        Q.initFullHeightGridPage($('#GridDiv'));
    });
</script>