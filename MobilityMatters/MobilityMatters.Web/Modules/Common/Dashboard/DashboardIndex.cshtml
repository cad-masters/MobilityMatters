@model MobilityMatters.Common.DashboardPageModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["PageId"] = "Dashboard";
}

@section Head {
    @Html.StyleBundle("Pages/Dashboard")
    @Html.ScriptBundle("Pages/Dashboard")
}

@section ContentHeader {
    <h1>@LocalText.Get("Navigation.Dashboard")<small>@Html.Raw(Texts.Site.Dashboard.ContentDescription)</small></h1>
}

<script type="text/javascript">
    $(function () {
        var cCity = [
            { id: "Name", name: "City", field: "Name", width: 250 },
            { id: "Count", name: "Client Count", field: "Count", width: 150 },
        ];

        var cAge = [
            { id: "Name", name: "Age", field: "Name", width: 250 },
            { id: "Count", name: "Age Count", field: "Count", width: 150 },
        ];

        var cProgramOption = [
            { id: "Name", name: "Program", field: "Name", width: 250 },
            { id: "Count", name: "Count", field: "Count", width: 150 },
        ];

        var cProgramType = [
            { id: "Name", name: "Status Type", field: "Name", width: 250 },
            { id: "Count", name: "Count", field: "Count", width: 150 },
        ];

        var options = {
            enableCellNavigation: true,
            enableColumnReorder: false,
            sortable: true
        };

        new Slick.Grid("#clientsByCityGrid", @Html.Raw(Model.ClientsByCity.OrderByDescending(x => x.Count).ToJson()), cCity, options);
        new Slick.Grid("#clientsByAgeGrid", @Html.Raw(Model.ClientsByAge.OrderByDescending(x => x.Count).ToJson()), cAge, options);
        new Slick.Grid("#clientsByStatusTypeGrid", @Html.Raw(Model.ClientsByStatusType.OrderByDescending(x => x.Count).ToJson()), cProgramType, options);

        new Slick.Grid("#clientsByStatusOptionGrid", @Html.Raw(Model.ClientsByStatusOption.OrderByDescending(x => x.Count).ToJson()), cProgramOption, options);
    });
</script>

<!-- Small boxes (Stat box) -->
<div class="row">
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-aqua">
            <div class="inner">
                <h3>@Model.CustomerCount</h3>
                <p>Total Riders</p>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a href="~/Northwind/Customer" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div><!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-green">
            <div class="inner">
                <h3>@Model.EmployeeCount</h3>
                <p>Total Volunteers</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="~/Northwind/Employees" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div><!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-yellow">
            <div class="inner">
                <h3>@Model.OrderCount</h3>
                <p>Total Trips</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a href="~/Northwind/Order" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div><!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-red">
            <div class="inner">
                <div class="pull-left">
                    <h3>@Model.AlamedaRiders</h3>
                    <p>Alameda Co. Riders</p>
                </div>
                <div class="align-right">
                    <h3>@Model.ContraCostaRiders</h3>
                    <p>Contra Costa Co. Riders</p>
                </div>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a href="~/Northwind/Product" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div><!-- ./col -->
</div><!-- /.row -->
